extends ../layout

block content
  div.container
    div(class='col-lg-3')
      ul(class='nav nav-pills nav-stacked')
        li(class="active")
          a(href='/contacto/crear') Crear
            //span(class='badge pull-right') 10
        li
          a(href='#') Profile
            //span(class='badge pull-right') 4
        li
          a(href='#') Messages
            //span(class='badge pull-right') 1
      //include form
    div(class='col-lg-9')
      if(docs.length)
        h2 Lista de contactos 
          small #{docs.length} contactos
        table(class='table table-hover table-condensed')
          thead
            tr
              th Nombre
              th Apellido
              th Correo
              //th
              th
              th
          tbody
            each c in docs
              tr
                td #{c.nombre}
                td #{c.apellido}
                td #{c.correo}
                //td
                //  a(href='/contacto/#{c.id}/mostrar', class='btn btn-primary btn-xs') Mostrar
                td
                  a(href='/contacto/#{c.id}/editar', class='btn btn-primary btn-xs') Editar
                td
                  a(href='/contacto/#{c.id}/eliminar', class='btn btn-danger btn-xs') Eliminar
                  //  span(class='badge') x

      else
        p No hay registros
      p.text-right
        a(href='/contacto/crear', class='btn btn-primary btn-xs') Crear nuevo contacto